

<div class="container">


<nav class="navbar navbar-light bg-light">
  <p class="t-center "> Mister Cocktail </p>
</nav>

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1516997121675-4c2d1684aa3e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=752&q=80);">

    <h1>All Cocktails</h1>

  </div>

  <div class="d-flex p-20 align-items-center">
      <p class="text"><%= link_to 'New cocktail', new_cocktail_path, class: 'btn btn-primary' %></p>
  </div>

  <div class="shadow mb-5 bg-white rounded">
        <% @cocktails.each do |cocktail| %>
        <div class="border-bottom py-2 px-3">
          <div class="d-flex justify-content-between align-items-center">
          <div>
          <%= link_to cocktail.name, cocktail_path(cocktail), class: 'font-weight-bolder text-dark' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

</div>




